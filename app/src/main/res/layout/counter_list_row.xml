<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/counter_name"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toLeftOf="@+id/edit_button"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:id="@+id/counter_comment"
        android:layout_width="0dp"
        android:layout_height="17dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="8dp"
        android:text="TextView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toLeftOf="@+id/counter_date"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp" />

    <Button
        android:id="@+id/increment_button"
        android:layout_width="88dp"
        android:layout_height="64dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="+"
        app:layout_constraintBaseline_toBaselineOf="@+id/counter_count"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/counter_count"
        android:layout_width="114dp"
        android:layout_height="49dp"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="15dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="133"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/counter_comment"
        app:layout_constraintLeft_toRightOf="@+id/decrement_button"
        app:layout_constraintRight_toLeftOf="@+id/increment_button"
        app:layout_constraintTop_toBottomOf="@+id/counter_name"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0.363" />

    <Button
        android:id="@+id/decrement_button"
        android:layout_width="88dp"
        android:layout_height="64dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="-"
        app:layout_constraintBaseline_toBaselineOf="@+id/counter_count"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/counter_date"
        android:layout_width="98dp"
        android:layout_height="18dp"
        android:layout_marginRight="16dp"
        android:text="2017-09-28"
        android:textAlignment="textEnd"
        app:layout_constraintBaseline_toBaselineOf="@+id/counter_comment"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/edit_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="60dp"
        android:layout_height="36dp"
        android:layout_marginRight="5dp"
        android:text="edit"
        app:layout_constraintBaseline_toBaselineOf="@+id/counter_name"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>